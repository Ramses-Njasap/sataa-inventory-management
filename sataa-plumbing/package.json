{
  "name": "sataa-plumbing",
  "version": "1.0.0",
  "description": "Sataa Plumbing is a comprehensive plumbing management application designed to streamline operations, enhance customer service, and improve overall efficiency for plumbing businesses.",
  "main": "./out/main/index.js",
  "author": {
    "name": "Ramses Njasap",
    "email": "ramsesnjasap11@gmail.com"
  },
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.sataa.plumbing",
    "productName": "Sataa Plumbing",
    "linux": {
      "target": ["deb", "AppImage"],
      "category": "Utility",
      "icon": "src/renderer/src/assets/icons/linux-icon.png"
    },
    "win": {
      "target": ["nsis"],
      "icon": "src/renderer/src/assets/icons/windows-icon.ico"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "bcryptjs": "^3.0.2",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react-chartjs-2": "^5.3.0",
    "react-router-dom": "^7.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^7.0.5"
  }
}
